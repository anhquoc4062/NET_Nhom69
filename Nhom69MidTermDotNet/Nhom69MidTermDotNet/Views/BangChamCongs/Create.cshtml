@model Nhom69MidTermDotNet.Models.BangChamCong

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BangChamCong</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nam" class="control-label"></label>
                <select asp-for="Nam" class ="form-control">
                    @for (var i = 2015; i <= 2018; i++)
                    {
                    <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Nam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thang" class="control-label"></label>
                <select asp-for="Thang" class="form-control">
                    @for (var i = 1; i <= 12; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Thang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nhân viên</label>
                <select asp-for="MaNv" class ="form-control" asp-items="ViewBag.MaNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="Songay" class="control-label"></label>
                <input asp-for="Songay" class="form-control" />
                <span asp-validation-for="Songay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
